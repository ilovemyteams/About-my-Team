        "@testing-library/user-event": "^14.5.2",
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
